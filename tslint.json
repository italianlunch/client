{
    "rulesDirectory": ["tslint-plugin-prettier"],
    "rules": {
        "prettier": [
            true,
            {
                "printWidth": 80,
                "tabWidth": 4,
                "useTabs": false,
                "semi": true,
                "singleQuote": true,
                "trailingComma": "es5",
                "bracketSpacing": true
            }
        ],
        "interface-name": false,
        "member-access": false,
        "no-console": false,
        "no-submodule-imports": false,
        "no-var-requires": false,
        "object-literal-sort-keys": [false],
        "variable-name": false
    },
    "extends": ["tslint:latest", "tslint-config-prettier"]
}
